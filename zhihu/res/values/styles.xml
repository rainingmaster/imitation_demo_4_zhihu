<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <style name="TitleBackgroundColor">
         <item name="android:background">#0179D8</item>
     </style>
     
     <style name="itemBlue">
         <item name="android:textColor">#FFFFFFFF</item>
     </style>
    
     <style name="titlestyle" parent="android:Theme" >
         <item name="android:windowTitleSize">40dip</item>   
         <item name="android:windowTitleBackgroundStyle">@style/TitleBackgroundColor</item>
     </style>
     
     <style name="titleText">
         <item name="android:paddingRight">10dip</item>
         <item name="android:background">@color/transparent</item>
         <item name="android:textStyle">bold</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:scaleType">centerInside</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">fill_parent</item>
         <item name="android:textSize">15sp</item>
     </style>
     
     <style name="titleButton">
         <item name="android:padding">10dip</item>
         <item name="android:background">@drawable/image_btn</item>
         <item name="android:scaleType">centerInside</item>
         <item name="android:layout_width">40dip</item>
         <item name="android:layout_height">fill_parent</item>
     </style>
     
     <!-- quiz page style -->
     <style name="quizBarTitle">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">fill_parent</item>
         <item name="android:layout_weight">1</item>
         <item name="android:textColor">@drawable/quiz_bar_text</item>
         <item name="android:background">@drawable/quiz_bar_bg</item>
         <item name="android:textSize">10sp</item>
         <item name="android:gravity">center</item>
     </style>
     
     <style name="divideLine_horizontal">
         <item name="android:layout_width">0.5dip</item>
         <item name="android:layout_height">fill_parent</item>
         <item name="android:layout_marginTop">7dip</item>
         <item name="android:layout_marginBottom">7dip</item>
         <item name="android:background">@color/white</item>
         <item name="android:layout_gravity">center</item> 
     </style>
     
     <style name="quizEditText">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:padding">3dip</item>
         <item name="android:ems">10</item>
         <item name="android:inputType">textMultiLine</item>
         <item name="android:textSize">10sp</item>
         <item name="android:gravity">top</item>
         <item name="android:background">@drawable/edittext_bg</item>
     </style>
     
     <style name="checkBox">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">20dip</item>
         <item name="android:textSize">10sp</item>
     </style>
     
</resources>
