<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <style name="TitleBackgroundColor">
         <item name="android:background">#0179D8</item>
     </style>
     
     <style name="itemBlue">
         <item name="android:textColor">#FFFFFFFF</item>
     </style>
    
     <style name="titlestyle" parent="android:Theme" >
         <item name="android:windowTitleSize">40dip</item>   
         <item name="android:windowTitleBackgroundStyle">@style/TitleBackgroundColor</item>
     </style>
     
     <style name="titleText">
         <item name="android:paddingRight">10dip</item>
         <item name="android:background">@color/transparent</item>
         <item name="android:textStyle">bold</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:scaleType">centerInside</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">fill_parent</item>
         <item name="android:textSize">15sp</item>
     </style>
     
     <style name="titleButton">
         <item name="android:padding">10dip</item>
         <item name="android:background">@drawable/image_btn</item>
         <item name="android:scaleType">centerInside</item>
         <item name="android:layout_width">40dip</item>
         <item name="android:layout_height">fill_parent</item>
     </style>
     
</resources>
