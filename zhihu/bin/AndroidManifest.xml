<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.packet.zhihu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/titlestyle" >
        <activity
            android:name="com.zhihu.activities.BaseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zhihu.activities.IndexActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zhihu.activities.QuestionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhihu.activities.AnswerActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
